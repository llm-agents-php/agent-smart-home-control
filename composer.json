{
  "name": "llm-agents/agent-smart-home-control",
  "description": "Simple agent to control smart home devices",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "llm-agents/agents": "^1.5",
    "llm-agents/json-schema-mapper": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3",
    "spiral/boot": "^3.13"
  },
  "autoload": {
    "psr-4": {
      "LLM\\Agents\\Agent\\SmartHomeControl\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LLM\\Agents\\Agent\\SmartHomeControl\\Tests\\": "tests/src"
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
